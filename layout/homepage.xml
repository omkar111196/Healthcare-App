<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#227FCA">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg3"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/buttonSubmit1"
            android:layout_width="5dp"
            android:layout_height="168dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="100dp"
            android:layout_weight="0.5"
            android:text="Submit 1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonSubmit2"
            android:layout_width="5dp"
            android:layout_height="168dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="100dp"
            android:layout_weight="0.5"
            android:text="Submit 2"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/buttonSubmit3"
            android:layout_width="5dp"
            android:layout_height="168dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="365dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="100dp"
            android:layout_weight="0.5"
            android:text="Submit 3"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonSubmit4"
            android:layout_width="0dp"
            android:layout_height="167dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="365dp"
            android:layout_marginRight="100dp"
            android:layout_weight="0.5"
            android:text="Submit 4"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="600dp"
            android:layout_marginRight="100dp"
            android:text="LogOut"
            app:iconTint="#44A8D5"
            app:rippleColor="#46A5CF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/bg2">

            <TextView
                android:id="@+id/textViewEnterDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Basic Details"
                android:textAlignment="center"
                android:layout_marginTop="170dp"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextEmail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="0dp"
                android:hint="Email Address"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:id="@+id/editTextPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:hint="Password"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:hint="Name"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:hint="Phone No"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editCity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:hint="City"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:hint="Address"
                android:textSize="20sp"
                android:textAlignment="textStart" />


            <Button
                android:id="@+id/buttonSignUp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="100dp"
                android:text="Sign Up" />

            <TextView
                android:id="@+id/textViewSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/buttonLogin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:text="Login" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
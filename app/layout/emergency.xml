<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg2">

        <TextView
            android:id="@+id/textEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup New Emergency Number"
            android:textAlignment="center"
            android:layout_marginTop="220dp"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editEmergencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="0dp"
            android:hint="Emergency Contact Name"
            android:textAlignment="textStart"
            android:inputType="text"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editEmergencyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:hint="Phone Number"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:text="Submit" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="100dp"
            android:text="Home Page" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:text="Contact Emergency Number"
            android:textSize="25sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>